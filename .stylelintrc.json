{
  "extends": [
      "stylelint-config-standard"
  ],
  "rules": {
    "alpha-value-notation": "number",
    "selector-class-pattern": [
      "^[a-z]+[a-zA-Z0-9]*?(__[a-z]+[a-zA-Z0-9]*)?(--[a-z]+[a-zA-Z0-9]*)?$",
      {
        "message": "Expected class selector to be in BEM format"
      }
    ]
  },
  "validate": [
      "css",
      "postcss"
  ]
}

